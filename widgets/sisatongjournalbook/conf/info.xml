<?xml version="1.0" encoding="UTF-8"?>
<widget version="0.1">
	<title xml:lang="ko">Sisatong 저널북</title>
	<description xml:lang="ko">Sisatong의 저널북 위젯입니다.</description>
	<version>0.1A</version>
	<date>2014-02-06</date>

	<author email_address="mrrays@naver.com" link="http://krablog.com/">
		<name xml:lang="ko">이한결</name>
		<name xml:lang="en">Lee Han Kyeol</name>
	</author>

	<extra_vars>
		<var id="widget_division">
			<type>text</type>
			<name xml:lang="ko">위젯 구분자</name>
			<description xml:lang="ko">다른 위젯과의 충돌을 막기 위한 구분자를 입력할 수 있습니다. 각 위젯별로 영문 이름을 붙여주세요. (예:slider_bottom)</description>
		</var>
		<var id="title">
			<type>text</type>
			<name xml:lang="ko">제목</name>
			<description xml:lang="ko">제목을 정하세요. (기본값: 저널북)</description>
		</var>
		<var id="thumbnail_width">
			<type>text</type>
			<name xml:lang="ko">썸네일 가로 크기</name>
			<description xml:lang="ko">썸네일 가로 크기를 픽셀 단위로 정하세요.</description>
		</var>
		<var id="thumbnail_height">
			<type>text</type>
			<name xml:lang="ko">썸네일 세로 크기</name>
			<description xml:lang="ko">썸네일 세로 크기를 픽셀 단위로 정하세요.</description>
		</var>
		<var id="module_srls">
			<type>module_srl_list</type>
			<name xml:lang="ko">대상 모듈</name>
			<description xml:lang="ko">선택하신 모듈에 등록된 글을 대상으로 합니다.</description>
		</var>
	</extra_vars>


</widget>
