<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
    <title xml:lang="ko">시사통 기본 레이아웃</title>
    <description xml:lang="ko">시사통 사이트 기본 레이아웃</description>
    <version>1.0</version>
    <date>2014-03-20</date>
    <author email_address="mrrays@naver.com" link="http://krablog.com/">
        <name xml:lang="ko">이한결</name>
    </author>
    <menus>
        <menu name="GNB" maxdepth="2" default="true">
            <title xml:lang="ko">전역 네비게이션 바</title>
            <title xml:lang="en">Global Navigation Bar</title>
        </menu>
    </menus>
	<extra_vars>
		<var name="LOGO_IMG" type="image">
			<title xml:lang="ko">사이트 로고 이미지</title>
			<title xml:lang="en">Site logo image</title>
		</var>
		<var name="LOGO_TEXT" type="text">
			<title xml:lang="ko">사이트 로고 문자</title>
			<title xml:lang="en">Site logo text</title>
		</var>
		<var name="WEB_FONT" type="select">
			<title xml:lang="ko">웹 폰트</title>
			<title xml:lang="en">Web Font</title>
			<options value="NO">
				<title xml:lang="ko">'나눔고딕' 웹 폰트 사용 안함</title>
				<title xml:lang="en">Do not use 'NanumGothic' web font</title>
			</options>
			<options value="YES">
				<title xml:lang="ko">'나눔고딕' 웹 폰트 사용</title>
				<title xml:lang="en">Use 'NanumGothic' web font</title>
			</options>
		</var>
		<var name="RECENT_ARTICLE_MID" type="text">
			<title xml:lang="ko">클릭시 최신 글이 나오게 할 게시판 mid</title>
		</var>
		<var name="BANNER_IMAGE_SRC" type="image">
			<title xml:lang="ko">상단 배너</title>
		</var>
		<var name="BANNER_LINK_URL" type="text">
			<title xml:lang="ko">상단 배너 클릭시 이동할 주소</title>
		</var>
		<var name="SIDE_BANNER1_IMAGE_SRC" type="image">
			<title xml:lang="ko">우측 상단 배너</title>
		</var>
		<var name="SIDE_BANNER1_IMAGE_MAP" type="textarea">
			<title xml:lang="ko">우측 상단 배너 이미지맵 코드</title>
		</var>
		<var name="SIDE_BANNER2_IMAGE_SRC" type="image">
			<title xml:lang="ko">우측 하단 배너</title>
		</var>
		<var name="SIDE_BANNER2_LINK_URL" type="text">
			<title xml:lang="ko">우측 하단 배너 클릭시 이동할 주소</title>
		</var>
	</extra_vars>
</layout>